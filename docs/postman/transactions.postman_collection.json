{
    "info": {
        "_postman_id": "transactions-api-collection",
        "name": "Library Management - Transactions API",
        "description": "Complete API collection for Transactions Module - Book borrowing, returns, renewals, and fine management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{accessToken}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "accessToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "transactionId",
            "value": "",
            "type": "string"
        },
        {
            "key": "bookId",
            "value": "",
            "type": "string"
        },
        {
            "key": "userId",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Issue Book",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "pm.test(\"Response has success flag\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.success).to.be.true;",
                            "});",
                            "",
                            "pm.test(\"Transaction ID is returned\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.data.id).to.exist;",
                            "    pm.collectionVariables.set(\"transactionId\", jsonData.data.id);",
                            "});",
                            "",
                            "pm.test(\"Transaction status is ISSUED\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.data.status).to.eql(\"ISSUED\");",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"bookId\": \"{{bookId}}\",\n  \"userId\": \"{{userId}}\",\n  \"isHomeDelivery\": false,\n  \"notes\": \"Book issued via Postman\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/transactions/issue",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "transactions",
                        "issue"
                    ]
                },
                "description": "Issue a book to a user. Requires ADMIN or LIBRARIAN role."
            },
            "response": []
        },
        {
            "name": "2. Get All Transactions",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Response has data array\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.data).to.be.an('array');",
                            "});",
                            "",
                            "pm.test(\"Response has pagination metadata\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.meta).to.exist;",
                            "    pm.expect(jsonData.meta.page).to.exist;",
                            "    pm.expect(jsonData.meta.total).to.exist;",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/transactions?page=1&limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "transactions"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        },
                        {
                            "key": "status",
                            "value": "ISSUED",
                            "disabled": true
                        },
                        {
                            "key": "overdue",
                            "value": "true",
                            "disabled": true
                        }
                    ]
                },
                "description": "Get paginated list of all transactions with optional filtering."
            },
            "response": []
        },
        {
            "name": "3. Get Transaction by ID",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
