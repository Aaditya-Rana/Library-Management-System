                "description": "Update a boolean setting value"
            },
            "response": []
        },
        {
            "name": "Reset Setting to Default",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                            "pm.test('Setting reset successfully', () => {",
                            "    const response = pm.response.json();",
                            "    pm.expect(response.success).to.be.true;",
                            "    pm.expect(response.message).to.equal('Setting reset to default successfully');",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/settings/library.name/reset",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "settings",
                        "library.name",
                        "reset"
                    ]
                },
                "description": "Reset a setting to its default value (Admin only)"
            },
            "response": []
        },
        {
            "name": "Librarian Cannot Update (Test)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 403', () => pm.response.to.have.status(403));",
                            "pm.test('Access denied for librarian', () => {",
                            "    pm.expect(pm.response.code).to.equal(403);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{librarianToken}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"value\": \"Test\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/settings/library.name",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "settings",
                        "library.name"
                    ]
                },
                "description": "Test that librarians cannot update settings (should return 403)"
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
