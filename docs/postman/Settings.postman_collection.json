                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"value\": 10\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/settings/fines.per_day_amount",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
