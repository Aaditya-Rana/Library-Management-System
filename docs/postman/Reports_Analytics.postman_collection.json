    "item": [
        {
            "name": "Dashboard Statistics",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                            "pm.test('Response has dashboard data', () => {",
                            "    const response = pm.response.json();",
                            "    pm.expect(response.success).to.be.true;",
                            "    pm.expect(response.data.overview).to.exist;",
                            "    pm.expect(response.data.financial).to.exist;",
                            "    pm.expect(response.data.today).to.exist;",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/reports/dashboard",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "reports",
                        "dashboard"
                    ]
                },
                "description": "Get overall library dashboard statistics including books, users, transactions, and financial metrics"
            },
            "response": []
        },
